{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "plugins": [
        [
            "module-resolver",
            {
                "root": ["./src"],
                "extensions": [
                    ".ios.js",
                    ".android.js",
                    ".js",
                    ".ts",
                    ".tsx",
                    ".json"
                ],
                "alias": {
                    "@components": "./src/components"
                }
            }
        ]
    ]
}
